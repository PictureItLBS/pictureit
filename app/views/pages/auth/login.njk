{% extends "templates/base.njk" %}

{% block head %}
<title>Login!</title>
{% endblock %}

{% block body %}
    <div class="form-box">

        <form action="/app/auth/login" method="post">
            <h1>Log in</h1>

            {% if data.error %}
                <p class="error">Oh noes! {{ data.error }}</p>
            {% endif %}

            <label for="username">Username:</label>
            <input type="text" name="username" placeholder="FancyCat">

            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="|/|'/ s|_|p3r s3cr37 p4ss//0rd">

            <input type="text" name="url-redir" value="{{ options.urlRedir }}" style="display: none;">

            <button class="primary" type="submit">Sign in</button>

            <a href="/app/auth/register">Don't have an account? Create one!</a>
            <a href="#">Forgot your password?</a>
        </form>
            <img src="/static/logo.svg">
    </div>
{% endblock %}